{
   "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
   "diagnostics": {
      "libraryFiles": "Disable",
      "globals": [
         "vifm"
      ]
   },
   "runtime": {
      "version": "LuaJIT",
      "path": [
         "lua/?.lua",
         "lua/?/init.lua",
         "library/?.lua",
         "library/?/init.lua"
      ]
   },
   "workspace": {
      "checkThirdParty": "Disable",
      "library": [
         "${3rd}/luassert",
         "${3rd}/busted",
         "${3rd}/luv",
         "$VIMRUNTIME"
      ],
      "ignoreDir": [
         ".dependencies",
         ".luarocks",
         ".lua",
         ".repro"
      ]
   }
}
